<div class="container">
  <h1>My Basket</h1>
  <h2><%= @order.id %></h2>
  <p>Products in this order:</p>
  <% @products.each do |product| %>
    <%= product.name %>
    <br>
    <%= link_to "Remove from basket", product_order_product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove me from your basket?"}, class:"btn btn-primary"%>
  <hr>

  <% end %>

  <%= link_to "All Sauces", products_path %>
</div>
