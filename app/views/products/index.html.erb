<div class="container">
  <h1 class="mt-5 mb-3">Our Sauces</h1>
  <%= form_tag products_path, method: :get, class: "d-flex pb-3" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a sauce"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <div class="grid pb-3">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
      <div class="card-trip">
      <% if product.photo.attached?%>
        <%= cl_image_tag product.photo.key %>
      <% else %>
        <img src="https://www.web2ink.com/wp-content/uploads/2020/03/coming-soon-advantage-plan..jpg" alt="">
      <% end %>
          <div class="card-infos">
            <div class="card-title p-3">
              <h2><%= product.name %> | <%= product.manufacturer %></h2>
            </div>
            <div class="p-3 d-flex justify-content-between flex-end">
              <%# <%= link_to "Learn More", product_path(product) %>
              <p>Â£<%= product.price %></p>
            </div>
            <div id="cardButton"></div>
          </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <% if current_user.admin == true %>
  <%= link_to "Create Sauce", new_product_path, class:"btn btn-primary" %>
  <% end %>
</div>
